<div class="contents row">
  <div class= "form-contents">
    <%= form_tag("/posts/#{@post.id}", method: :patch) do %>
      <h3>
        編集する
      </h3>
      <p><textarea type="text" name="title" placeholder="title" cols="53"><%= @post.title %></textarea></p>
      <p><textarea name="text" placeholder="text" rows="10" cols="53"><%= @post.text %></textarea></p>
      <p><div class="submit"><input type="submit" value="SEND"></div></p>
    <% end %>
  </div>
</div>


